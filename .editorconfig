root = true

[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4


[*.sh]
end_of_line = lf

[*.{ts,js}]
indent_style = tab

[*.{scss,css}]
indent_style = tab

[*.{cshtml,html}]
indent_style = tab

[*.json]
indent_style = tab

[*.{xml,config}]
indent_style = tab

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.bat]
indent_style = tab
indent_size = 4
charset = shift-jis

[*.pug]
indent_style = tab
indent_size = 4

[*.{c,h}]
charset = utf-8-bom

[*.ps1]
charset = utf-8-bom
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

