doctype html
html(lang='ja')
	head
		block BLOCK_LAYOUT_VAR

		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1')

		- var TITLE = 'Content-type: text/net'
		if(VAR_LAYOUT_TITLE)
			title #{VAR_LAYOUT_TITLE} - #{TITLE}
		else
			title #{TITLE}

		link(rel='stylesheet' type='text/css' href='style/markdown-style.scss')

		block BLOCK_LAYOUT_HEAD
		block BLOCK_LAYOUT_STYLE
		block BLOCK_LAYOUT_HEAD_SCRIPT
		script(async src="https://www.googletagmanager.com/gtag/js?id=UA-83877058-1")
		script.
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'UA-83877058-1');
	body
		if(VAR_LAYOUT_TITLE)
			h1 #{VAR_LAYOUT_TITLE}
		else
			h1 #{TITLE}
		div#content
			#container
				block BLOCK_LAYOUT_CONTENT

		block BLOCK_LAYOUT_TAIL_SCRIPT

